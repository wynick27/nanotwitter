	<div class="container-fluid bg-info">
	<header><h1>Register</h1></header>
	<div>
		<form action="/register" method="POST" class='ajax-form'>
			<div class="form-group">
				<h2>Your basic info</h2>
				<div class="control-group">
				<label for="name" class="control-label">Username:</label>
				<input type="text" id="name" class="form-control" name="name">
				</div>
				<label for="display_name" class="control-label">Full Name:</label>
				<input type="text" id="display_name" class="form-control" name="display_name">
				<label for="email" class="control-label">Email:</label>
				<input type="text" class="form-control" id="email" name="email">
				<label for="password" class="control-label">Password:</label>
				<input type="text" class="form-control" id="password" name="password">
			</div>
			    <input type="submit" class="btn btn-info" id='register_submit' value="Submit" />
		</form>
	</div>
	</div>
	<script src="js/bootstrap-form.js" type="text/javascript"></script>
	<script>
	$('form.ajax-form').form();
	</script>
