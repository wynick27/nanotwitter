
    <div class="panel panel-default tweet-panel" data-loaded="false">
      <div class="panel-collapse collapse">
        <ul class="list-group ancestor-list">
        </ul>
      </div>
	<div class="panel-heading" >	   
		<a href="/user/<%= tweet.user.name%>"><%= tweet.user.display_name%></a>  @<%=tweet.user.name%>
		<%=tweet.create_time%>
		<br>
		<%= tweet.to_html%>
		<br>
		<a role="button" href="/tweet/<%=tweet.id%>/comment" class="text-success reply-btn" data-toggle="collapse" data-tweet-id="<%=tweet.id%>">
		  <span class="fa fa-reply tweet-comment"></span>
		</a>
		<a class="retweet-btn" role="button"  href="/tweet/<%=tweet.id%>/retweet"><span class="glyphicon glyphicon-retweet" <%=@curuser && tweet.retweeted_by?(@curuser) ? 'style="color:green"': nil%> /><span class="count"><%=tweet.retweets.size%></span></a>
		<a class="fav-btn" role="button"  href="/tweet/<%=tweet.id%>/favourite"><span class="glyphicon glyphicon-star" <%=@curuser && tweet.favourited_by?(@curuser) ? 'style="color:yellow"': nil%> /><span class="count"><%=tweet.favourites.size%></span></a>	      
	</div>
      <div class="panel-collapse collapse">
		<% if @curuser %>
		<div class="panel-footer">
			<textarea class="form-control user-autocomplete" data-provide="typeahead" maxlength="140" name="text" required></textarea>	
		    <button class="btn btn-info new-reply-btn" data-reply-to="<%=tweet.id%>">Reply</button>
		</div>
		<% end %>
        <ul class="list-group descendant-list">
        </ul>
        
      </div>
    </div>
	   
