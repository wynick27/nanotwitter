      var list = document.createElement('li');
      list.className = "list-group-item";
      //console.log(chatgroup.html);
      $(list).append(chatgroup.html);
      $('#chatgroups').append(list);
    });
  }, "json");

  //modal.find('.modal-body #recipient-names').val(recipients);
  //modal.find('modal-body input').tagsinput('add', 'mysgit');
});

$('#msgModal').on('hidden.bs.modal', function (event) {
